CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm -f

all: $(NAME)

CFLAGS = -Wall -Werror -Wextra -pedantic

$(NAME): m.h $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

$(OBJ): %.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
